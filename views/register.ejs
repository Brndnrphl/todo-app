<%- include('partials/header') %>
<main
  class="flex justify-center items-center min-h-screen font-JetBrains scale-200"
>
  <div
    class="flex flex-col justify-center items-center shadow-2xl p-5 bg-slate-50 w-4/12"
  >
    <span class="title mb-4">Create new account.</span>

    <form
      action="/register"
      method="POST"
      class="flex flex-col justify-center items-center flex-grow-0"
    >
      <div>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="email"
          class="w-full outline-none border-b-2 border-slate-200 bg-slate-50 text-med mb-2"
          required
        />
        <input
          type="password"
          name="password"
          id="password"
          placeholder="password"
          class="w-full outline-none border-b-2 border-slate-200 bg-slate-50 text-med mb-2"
          required
        />
        <input
          type="password"
          name="password2"
          id="password2"
          placeholder="verify password"
          class="w-full outline-none border-b-2 border-slate-200 bg-slate-50 text-med"
          required
        />
        <% if(error) { %>
        <span class="<%= error ? 'text-vsm text-red-500' : 'hidden' %>">
          <%= error ? error : 'password does not match!' %>
        </span>
        <% } %>
      </div>

      <button
        type="submit"
        class="bg-transparent hover:bg-slate-900 text-slate-900 font-semibold hover:text-white py-1 px-4 border border-slate-900 hover:border-transparent rounded text-xs mt-4"
      >
        register
      </button>
    </form>
  </div>
</main>
<%- include('partials/footer') %>
